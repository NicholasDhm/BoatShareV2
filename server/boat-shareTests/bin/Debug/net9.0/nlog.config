<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="false"
      throwConfigExceptions="true"
      internalLogLevel="error"
      internalLogFile=".\logs\internal-nlog-AspNetCore3-root.txt">

	<variable name="LogDir" value="Logs"/>
	<variable name="LogFile" value="boat-share-${date:format=dd}.txt"/>

	<!-- the targets to write to -->
	<targets>

		<!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
		<target xsi:type="Console" name="lifetimeConsole" layout="${level:truncate=4:lowercase=true}: ${logger}${newline}      ${message}${exception:format=tostring}" />

		<!-- logger for sending to visual studio output window -->
		<target type="Debugger" name="debugger" layout="${longdate} ${level} ${callsite} ${message}${exception:format=tostring}"/>
	</targets>

	<rules>
		<logger name="*" minlevel="Debug" writeTo="debugger" />

		<logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="lifetimeConsole" final="true" />

		<logger name="Microsoft.*" maxlevel="Info" final="true" />
	</rules>
</nlog>